generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Organization {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String
  slug          String         @unique
  maxUsers      Int?           @map("max_users") // Prepared for future user limits
  createdAt     DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime       @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  auditLogs     AuditLog[]
  comments      Comment[]
  docTags       DocTag[]
  epics         Epic[]
  features      Feature[]
  invites       Invite[]
  pokerSessions PokerSession[]
  projectDocs   ProjectDoc[]
  projectNotes  ProjectNote[]
  projects      Project[]
  tasks         Task[]
  taskTags      TaskTag[]
  userProfiles  UserProfile[]
  memberships   OrgMembership[]

  @@index([slug], map: "idx_organizations_slug")
  @@map("organizations")
  @@schema("public")
}

model UserProfile {
  id           String       @id @db.Uuid
  // DEPRECATED: orgId is no longer used - org relationships are in OrgMembership
  orgId        String?      @map("org_id") @db.Uuid
  displayName  String       @map("display_name")
  avatarUrl    String?      @map("avatar_url")
  // DEPRECATED: role is no longer used - use OrgMembership.role instead
  role         UserRole     @default(MEMBER)
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  users        users        @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull, onUpdate: NoAction)

  @@map("user_profiles")
  @@schema("public")
}

model OrgMembership {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String       @map("user_id") @db.Uuid
  orgId        String       @map("org_id") @db.Uuid
  role         UserRole     @default(MEMBER)
  isDefault    Boolean      @default(false) @map("is_default")
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  user         users        @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId, orgId])
  @@index([userId], map: "idx_org_memberships_user")
  @@index([orgId], map: "idx_org_memberships_org")
  @@map("org_memberships")
  @@schema("public")
}

model Invite {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @map("org_id") @db.Uuid
  token        String       @unique @default(dbgenerated("gen_random_uuid()"))
  email        String?      // Optional - for tracking who was invited
  role         UserRole     @default(MEMBER)
  status       InviteStatus @default(PENDING)
  createdBy    String       @map("created_by") @db.Uuid
  expiresAt    DateTime     @map("expires_at") @db.Timestamptz(6)
  acceptedBy   String?      @map("accepted_by") @db.Uuid
  acceptedAt   DateTime?    @map("accepted_at") @db.Timestamptz(6)
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([orgId], map: "idx_invites_org")
  @@index([token], map: "idx_invites_token")
  @@index([status], map: "idx_invites_status")
  @@map("invites")
  @@schema("public")
}

model AuditLog {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @map("org_id") @db.Uuid
  userId       String       @map("user_id") @db.Uuid
  action       String       // e.g., "user.invite.created", "user.role.changed"
  targetType   String?      @map("target_type") // e.g., "user", "project"
  targetId     String?      @map("target_id") @db.Uuid
  metadata     Json?        // Additional context
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([orgId], map: "idx_audit_logs_org")
  @@index([orgId, createdAt(sort: Desc)], map: "idx_audit_logs_org_created")
  @@index([userId], map: "idx_audit_logs_user")
  @@map("audit_logs")
  @@schema("public")
}

model Project {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @map("org_id") @db.Uuid
  name         String
  key          String
  description  String?
  modules      String[]     @default([])
  createdBy    String?      @map("created_by") @db.Uuid
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  docTags      DocTag[]
  epics        Epic[]
  projectDocs  ProjectDoc[]
  projectNotes ProjectNote[]
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  creator      users?       @relation("ProjectCreator", fields: [createdBy], references: [id], onUpdate: NoAction)
  tasks        Task[]
  taskTags     TaskTag[]

  @@unique([orgId, key])
  @@index([orgId], map: "idx_projects_org")
  @@index([createdBy], map: "idx_projects_created_by")
  @@map("projects")
  @@schema("public")
}

model ProjectDoc {
  id           String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String             @map("org_id") @db.Uuid
  projectId    String             @map("project_id") @db.Uuid
  title        String
  content      String
  createdBy    String?            @map("created_by") @db.Uuid
  createdAt    DateTime           @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime           @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  organization Organization       @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project      Project            @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  creator      users?             @relation("DocCreator", fields: [createdBy], references: [id], onUpdate: NoAction)
  tags         DocTagAssignment[]

  @@index([orgId], map: "idx_project_docs_org")
  @@index([projectId], map: "idx_project_docs_project")
  @@map("project_docs")
  @@schema("public")
}

model ProjectNote {
  id                   String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId                String       @map("org_id") @db.Uuid
  projectId            String       @map("project_id") @db.Uuid
  title                String
  content              String
  status               NoteStatus   @default(ACTIVE)
  convertedToFeatureId String?      @map("converted_to_feature_id") @db.Uuid
  createdBy            String?      @map("created_by") @db.Uuid
  createdAt            DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt            DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  organization         Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project              Project      @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  convertedToFeature   Feature?     @relation(fields: [convertedToFeatureId], references: [id], onUpdate: NoAction)
  creator              users?       @relation("NoteCreator", fields: [createdBy], references: [id], onUpdate: NoAction)

  @@index([orgId], map: "idx_project_notes_org")
  @@index([projectId], map: "idx_project_notes_project")
  @@index([projectId, status], map: "idx_project_notes_project_status")
  @@index([createdBy], map: "idx_project_notes_created_by")
  @@map("project_notes")
  @@schema("public")
}

model DocTag {
  id           String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String             @map("org_id") @db.Uuid
  projectId    String             @map("project_id") @db.Uuid
  name         String
  createdAt    DateTime           @default(now()) @map("created_at") @db.Timestamptz(6)
  organization Organization       @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project      Project            @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  assignments  DocTagAssignment[]

  @@unique([projectId, name], map: "uq_doc_tags_project_name")
  @@index([orgId], map: "idx_doc_tags_org")
  @@index([projectId], map: "idx_doc_tags_project")
  @@map("doc_tags")
  @@schema("public")
}

model DocTagAssignment {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  docId     String     @map("doc_id") @db.Uuid
  tagId     String     @map("tag_id") @db.Uuid
  createdAt DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  doc       ProjectDoc @relation(fields: [docId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tag       DocTag     @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([docId, tagId], map: "uq_doc_tag_assignments_doc_tag")
  @@index([docId], map: "idx_doc_tag_assignments_doc")
  @@index([tagId], map: "idx_doc_tag_assignments_tag")
  @@map("doc_tag_assignments")
  @@schema("public")
}

model Epic {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId          String       @map("org_id") @db.Uuid
  projectId      String       @map("project_id") @db.Uuid
  title          String
  description    String?
  status         EpicStatus   @default(OPEN)
  createdBy      String?      @map("created_by") @db.Uuid
  createdAt      DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime     @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  isSystem       Boolean      @default(false) @map("is_system")
  aiSummary      String?      @map("ai_summary")
  lastAnalyzedAt DateTime?    @map("last_analyzed_at") @db.Timestamptz(6)
  // Health check fields
  risk           EpicRisk     @default(low)
  riskUpdatedAt  DateTime     @default(now()) @map("risk_updated_at") @db.Timestamptz(6)
  riskReason     String?      @map("risk_reason")
  organization   Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project        Project      @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  creator        users?       @relation("EpicCreator", fields: [createdBy], references: [id], onUpdate: NoAction)
  features       Feature[]

  @@index([orgId], map: "idx_epics_org")
  @@index([projectId], map: "idx_epics_project")
  @@index([createdBy], map: "idx_epics_created_by")
  @@map("epics")
  @@schema("public")
}

model Feature {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId           String        @map("org_id") @db.Uuid
  epicId          String        @map("epic_id") @db.Uuid
  title           String
  description     String?
  status          FeatureStatus @default(BACKLOG)
  createdBy       String?       @map("created_by") @db.Uuid
  createdAt       DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime      @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  isSystem        Boolean       @default(false) @map("is_system")
  // Health check fields
  health          FeatureHealth @default(healthy)
  healthUpdatedAt DateTime      @default(now()) @map("health_updated_at") @db.Timestamptz(6)
  healthReason    String?       @map("health_reason")

  // AI Analysis
  technicalAnalysis String?       @map("technical_analysis")
  analysisUpdatedAt DateTime?     @map("analysis_updated_at") @db.Timestamptz(6)

  epic            Epic          @relation(fields: [epicId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  organization    Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  creator         users?        @relation("FeatureCreator", fields: [createdBy], references: [id], onUpdate: NoAction)
  tasks           Task[]
  fromNotes       ProjectNote[]
  tagAssignments  FeatureTagAssignment[]

  @@index([epicId], map: "idx_features_epic")
  @@index([orgId], map: "idx_features_org")
  @@index([status], map: "idx_features_status")
  @@index([createdBy], map: "idx_features_created_by")
  @@map("features")
  @@schema("public")
}

model Task {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String        @map("org_id") @db.Uuid
  projectId    String        @map("project_id") @db.Uuid
  featureId    String        @map("feature_id") @db.Uuid
  localId         Int           @map("local_id")
  title           String
  description     String?
  status          TaskStatus    @default(BACKLOG)
  type            TaskType      @default(TASK)
  priority        TaskPriority  @default(MEDIUM)
  points          Int?
  modules         String[]      @default([])
  assigneeId      String?       @map("assignee_id") @db.Uuid
  createdBy       String?       @map("created_by") @db.Uuid
  createdAt       DateTime      @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime      @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  // Health check fields
  blocked         Boolean       @default(false)
  statusChangedAt DateTime?     @map("status_changed_at") @db.Timestamptz(6)
  comments        Comment[]
  pokerSession    PokerSession?
  tagAssignments  TaskTagAssignment[]
  assignee        users?        @relation("TaskAssignee", fields: [assigneeId], references: [id], onUpdate: NoAction)
  creator         users?        @relation("TaskCreator", fields: [createdBy], references: [id], onUpdate: NoAction)
  feature         Feature       @relation(fields: [featureId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  organization    Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project         Project       @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([projectId, localId])
  @@index([assigneeId, status], map: "idx_tasks_assignee_status")
  @@index([featureId], map: "idx_tasks_feature")
  @@index([orgId], map: "idx_tasks_org")
  @@index([orgId, createdAt(sort: Desc)], map: "idx_tasks_org_created")  // Optimizes default sort
  @@index([orgId, status], map: "idx_tasks_org_status")                  // Optimizes status filter
  @@index([orgId, priority], map: "idx_tasks_org_priority")              // Optimizes priority filter
  @@index([projectId], map: "idx_tasks_project")
  @@index([projectId, localId], map: "idx_tasks_project_local_id")
  @@index([createdBy], map: "idx_tasks_created_by")
  @@map("tasks")
  @@schema("public")
}

model TaskTag {
  id                   String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId                String                 @map("org_id") @db.Uuid
  projectId            String                 @map("project_id") @db.Uuid
  name                 String
  color                String                 @default("#6366f1") // Indigo default
  description          String?
  createdAt            DateTime               @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt            DateTime               @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)
  organization         Organization           @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  project              Project                @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  taskAssignments      TaskTagAssignment[]
  featureAssignments   FeatureTagAssignment[]

  @@unique([projectId, name], map: "uq_task_tags_project_name")
  @@index([orgId], map: "idx_task_tags_org")
  @@index([projectId], map: "idx_task_tags_project")
  @@map("task_tags")
  @@schema("public")
}

model TaskTagAssignment {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  taskId    String   @map("task_id") @db.Uuid
  tagId     String   @map("tag_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tag       TaskTag  @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([taskId, tagId], map: "uq_task_tag_assignments_task_tag")
  @@index([taskId], map: "idx_task_tag_assignments_task")
  @@index([tagId], map: "idx_task_tag_assignments_tag")
  @@map("task_tag_assignments")
  @@schema("public")
}

model FeatureTagAssignment {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  featureId String   @map("feature_id") @db.Uuid
  tagId     String   @map("tag_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  feature   Feature  @relation(fields: [featureId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  tag       TaskTag  @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([featureId, tagId], map: "uq_feature_tag_assignments_feature_tag")
  @@index([featureId], map: "idx_feature_tag_assignments_feature")
  @@index([tagId], map: "idx_feature_tag_assignments_tag")
  @@map("feature_tag_assignments")
  @@schema("public")
}

model Comment {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @map("org_id") @db.Uuid
  taskId       String       @map("task_id") @db.Uuid
  userId       String       @map("user_id") @db.Uuid
  content      String
  createdAt    DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
