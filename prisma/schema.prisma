  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  task         Task         @relation(fields: [taskId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  users        users        @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([orgId], map: "idx_comments_org")
  @@index([taskId], map: "idx_comments_task")
  @@index([taskId, createdAt(sort: Desc)], map: "idx_comments_task_created")
  @@index([userId], map: "idx_comments_user")
  @@map("comments")
  @@schema("public")
